{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "package.json",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}